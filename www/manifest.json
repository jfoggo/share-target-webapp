{
	"author": "jfoggo",
	"name": "ShareTarget-WebApp",
	"short_name": "ShareTarget",
	"description": "Receive shared data from other apps",
	"orientation": "portrait",
	"start_url": "/",
	"scope": "/",
	"display": "standalone",
	"background_color": "black",
	"theme_color": "black",
	"icons": [
		{
			"src": "/icon.png",
			"sizes": "48x48 72x72 96x96 128x128 192x192 256x256 512x512",
			"type": "image/png"
		}
	],
	"manifest_version": 2,
	"version": "0.1",
	"applications": {
		"gecko": {
			"id": "addon@example.com"
		}
	},
	"share_target": {
		"action": "/",
		"method": "GET",
		"params": {
			"title": "title",
			"text": "text",
			"url": "url"
		}
	}
}